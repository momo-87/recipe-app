<%= render partial: 'shared/header' %>
<div class="flex flex-col gap-5 w-full md:w-[60%] mx-auto">
  <h1 class="md:text-4xl text-2xl font-extrabold mx-auto">My Recipes</h1>
  <div class="w-full flex justify-end">
    <% if can? :destroy, Recipe %>
        <a href=<%= new_recipe_path %> id="add-food-link" class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2">Add Recipe</a>
    <% end %>
  </div>

  <% @recipes.each do |recipe| %>
    <% if can? :read, recipe %>
      <%= render partial: 'shared/recipe_card', locals: { recipe: recipe } %>
    <% end %>
  <% end %>
</div>