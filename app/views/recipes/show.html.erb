<div class="w-full flex flex-col gap-5 pl-[3%] pr-[3%] md:w-[50%] mx-auto pt-5">
  <h1 class="md:text-4xl text-2xl font-extrabold mx-auto"><%= @recipe.name %></h1>
  <div class="flex justify-between w-[90%]">
    <p>preparation time: <span class="font-extrabold"><%= @recipe.preparation_time %></span></p>
    <button>Public</button>
  </div>
  <p>Cooking time: <span class="font-extrabold"><%= @recipe.cooking_time %></span></p>
  <p>Steps go here...</p>
  <div class="flex justify-between">
    <button class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2">Generate shopping list</button>
    <button class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2">Add ingredient</button>
  </div>
  <div class="w-[90%] border-2 border-black mx-auto"></div>

  <div class="grid grid-cols-4 grid-rows-1 grid-flow-row">
    <div>Food</div>
    <div>Quantity</div>
    <div>Value</div>
    <div>Actions</div>
    <% @recipe_foods.each do |recipe_food| %>
      <div><%= @foods.find_by(id: recipe_food.food_id).name %></div>
      <div><%= recipe_food.quantity %></div>
      <div><%= @foods.find_by(id: recipe_food.food_id).price * recipe_food.quantity %></div>
      <div>
        <button>Modify</button>
        <button>Remove</button>
      </div>
    <% end %>
  </div>

</div>