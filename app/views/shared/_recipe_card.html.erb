  <div class="border-2 border-black flex gap-[5%] p-[3%] relative min-h-[140px]">
    <div>
      <h2 class="text-xl font-extrabold"><%= recipe.name %></h2>
      <% if can? :destroy, recipe %>
      <%= link_to 'REMOVE', recipe_path(recipe.id), class: "font-medium text-blue-600 underline hover:no-underline", data: { "turbo-method": :delete } %>
      <% end %>

    </div>
    <div class="w-[65%]">
      <p><%= recipe.description %></p>
    </div>
    <a href="<%= recipe_path(recipe.id) %>" id="<%= recipe.id %>"  class="text-white absolute h-7 md:right-[2%] bottom-1 left-[2%] md:left-auto bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 mt-5 pt-1">Details</a>
  </div>
